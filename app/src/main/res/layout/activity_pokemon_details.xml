<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:contentDescription="@string/pokemon_details"
    android:fillViewport="true"
    tools:context=".ui.home.view.activity.PokemonDetailsActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/viewBackGround"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewPokemonInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape_view_pokemon_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBackGround" />

        <TextView
            android:padding="4dp"
            android:id="@+id/txtPokemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:fontFamily="@font/baloo"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imgPokemon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewBackGround"
            tools:text="Pokemon" />

        <ImageView
            android:id="@+id/imgPokemon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/img_pokemon"
            app:layout_constraintBottom_toTopOf="@id/viewPokemonInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewBackGround"
            android:contentDescription="@string/pokemon_image" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvPokemonAbility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/navy"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toStartOf="@+id/cvPokemonType"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPokemon">

            <TextView
                android:id="@+id/txtPokemonAbility"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="Ability" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvPokemonType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/cvPokemonAbility"
            app:layout_constraintEnd_toStartOf="@+id/cvPokemonMovement"
            app:layout_constraintStart_toEndOf="@+id/cvPokemonAbility"
            app:layout_constraintTop_toTopOf="@+id/cvPokemonAbility">

            <TextView
                android:id="@+id/txtPokemonType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="Type" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvPokemonMovement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cvPokemonType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cvPokemonType"
            app:layout_constraintTop_toTopOf="@+id/cvPokemonType">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="Movement" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txtCharacterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/baloo"
            android:text="@string/characteristics"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/viewPokemonInfo"
            app:layout_constraintTop_toBottomOf="@id/cvPokemonAbility"/>

        <TextView
            android:id="@+id/txtHeightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:text="@string/height"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtStatsTitle"
            app:layout_constraintEnd_toStartOf="@+id/txtWeightTitle"
             app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/viewPokemonInfo"
            app:layout_constraintTop_toBottomOf="@+id/txtCharacterTitle"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/txtHeight"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_height="wrap_content"
             android:fontFamily="@font/baloo"
            app:layout_constraintEnd_toEndOf="@+id/txtHeightTitle"
             app:layout_constraintStart_toStartOf="@+id/txtHeightTitle"
            app:layout_constraintTop_toBottomOf="@id/txtHeightTitle"
            tools:text="1.90" />

        <TextView
            android:id="@+id/txtWeightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/baloo"
            android:text="@string/weight"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtHeightTitle"
            app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toEndOf="@+id/txtHeightTitle"
            app:layout_constraintTop_toTopOf="@+id/txtHeightTitle" />

        <TextView
            android:id="@+id/txtWeight"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:fontFamily="@font/baloo"
            app:layout_constraintEnd_toEndOf="@+id/txtWeightTitle"
             app:layout_constraintStart_toStartOf="@+id/txtWeightTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtWeightTitle"
            tools:text="90"/>

        <TextView
            android:id="@+id/txtStatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/baloo"
            android:text="@string/stats"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/txtHeightTitle"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/txtHeightTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtHeightTitle" />

        <TextView
            android:id="@+id/txtStats"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            app:layout_constraintEnd_toEndOf="@+id/txtStatsTitle"
            app:layout_constraintStart_toStartOf="@+id/txtStatsTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtStatsTitle"
            tools:text="Speed" />

        <TextView

            android:id="@+id/txtHeldItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="@string/item"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtStatsTitle"
            app:layout_constraintEnd_toEndOf="@+id/txtWeightTitle"
            app:layout_constraintStart_toStartOf="@+id/txtWeightTitle"
            app:layout_constraintTop_toTopOf="@+id/txtStatsTitle"
             />

        <TextView
            android:id="@+id/txtHeldItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHeldItemTitle"
            app:layout_constraintStart_toStartOf="@+id/txtHeldItemTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtHeldItemTitle"
            tools:text="Moon-Stone" />

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/beige"
            app:layout_constraintBottom_toBottomOf="@+id/viewPokemonInfo"
            app:layout_constraintEnd_toEndOf="@id/viewPokemonInfo"
            app:layout_constraintStart_toStartOf="@id/viewPokemonInfo"
            app:layout_constraintTop_toBottomOf="@+id/txtStats"
            app:strokeColor="@color/black"
            app:strokeWidth="@dimen/cardview_compat_inset_shadow">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="5dp"

                android:textSize="18sp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="608dp"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore m" />

        </com.google.android.material.card.MaterialCardView>

           </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>