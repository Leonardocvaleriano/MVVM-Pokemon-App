<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokemon_nav_graph"
    app:startDestination="@id/listPokemonFragment">

    <navigation android:id="@+id/listPokemonFragment"
        app:startDestination="@id/listPokemonFragmentHome">
        <fragment
            android:id="@+id/listPokemonFragmentHome"
            android:name="com.codeplace.mvvmpokemonapp.ui.home.view.fragments.ListPokemonFragment"
            android:label="Pokemons"
            tools:layout="@layout/fragment_list_pokemon">
            <action
                android:id="@+id/navigateToPokemonDetailsFragment"
                app:destination="@id/pokemonDetailsFragment"
                app:enterAnim="@anim/from_right"
                app:exitAnim="@anim/from_left"
                app:popExitAnim="@anim/from_left" />
        </fragment>
        <fragment
            android:id="@+id/pokemonDetailsFragment"
            android:name="com.codeplace.mvvmpokemonapp.ui.home.view.fragments.PokemonDetailsFragment"
            android:label="Pokemon Details"
            tools:layout="@layout/fragment_pokemon_details" >
            <argument
                android:name="name"
                app:argType="string"
                android:defaultValue="Name"/>
            <argument
                android:name="id"
                app:argType="integer"
                android:defaultValue="0"/>
            <argument
                android:name="imageUrl"
                app:argType="string"
                android:defaultValue="Image"/>
            <argument
                android:name="ability"
                app:argType="string"
                android:defaultValue="Type"/>
            <argument
                android:name="type"
                app:argType="string"
                android:defaultValue="Move"/>
            <argument
                android:name="move"
                app:argType="string"
                android:defaultValue="Ability" />
        </fragment>

    </navigation>

    <fragment
        android:id="@+id/ListFavoritesPokemonFragment"
        android:name="com.codeplace.mvvmpokemonapp.ui.home.view.fragments.ListFavoritesPokemonFragment"
        android:label="Favorites" >
        <action
            android:id="@+id/action_ListFavoritesPokemonFragment_to_listPokemonFragment"
            app:destination="@id/listPokemonFragment"
            app:enterAnim="@anim/from_left" />
    </fragment>
    <action
        android:id="@+id/globalActionNavigateToNestedGraph"
        app:destination="@id/listPokemonFragment"
        app:enterAnim="@anim/from_left"
        app:popExitAnim="@anim/from_right" />

    <action
        android:id="@+id/globalActionNavigateToFavoritesFragment"
        app:destination="@id/ListFavoritesPokemonFragment"
        app:enterAnim="@anim/from_right"
        app:popExitAnim="@anim/from_left" />


</navigation>